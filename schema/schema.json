{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "OpenClockStandard Clock File",
  "type": "object",
  "properties": {
    "assets": {
      "type": "array",
      "description": "List of base64-encoded assets",
      "items": {
        "type": "object",
        "properties": {
          "filename": {
            "type": "string",
          },
          "imageData": {
            "type": "string",
            "contentEncoding": "base64",
            "contentMediaType": "image/png"
          }
        }
      }
    },
    "clockStandard": {
      "type": "object",
      "required": [
        "title",
        "layers"
      ],
      "properties": {
        "version": {
          "type": "number",
           "default": 1.0,
          "description": "Schema version"
        },
        "canvas": {
          "type": "object",
          "properties": {
            "width": {
                "type": "number",
                "default": 199.0
              },
            "height": {
              "type": "number",
              "default": 242.0
            },
            "type": {
                "type": "string",
                "default": "watchFace",
                "enum": [
                  "watchFace",
                  "squareWidget",
                  "wideWidget"
                ]
              },
          }
        },
        "title": {
          "type": "string",
          "description": "Name of the clock face"
        },
        "layers": {
          "type": "array",
          "description": "Clock layers to render in z-order",
          "items": {
            "type": "object",
            "required": [
              "type",
              "zIndex"
            ],
            "properties": {
              "zIndex": {
                "type": "integer"
              },
              "alpha": {
                "type": "number",
                "default": 1.0
              },
              "customName": {
                "type": "string"
              },
              "verticalPosition": {
                "type": "number",
                "default": 0.0,
                "description": "position on the canvas with a range of -1.0 to 1.0.  0.0 is center. Positive number is down and negative is up",
              },
              "isHidden": {
                "type": "boolean"
              },
              "fillColor": {
                "type": "string"
              },
              "horizontalPosition": {
                "type": "number",
                "default": 0.0,
                "description": "position on the canvas with a range of -1.0 to 1.0.  0.0 is center",
              },
              "angleOffset": {
                "type": "number",
                "default": 0.0,
                "description": "angle in degrees to rotate this item on the canvas. Positive is clockwise",
              },
              "scale": {
                "type": "number",
                "default": 1.0
              },
              "type": {
                "type": "string",
                "description": "dataLabel is used for activity and weather, dateTime is used for labels to show dates and times, hand is for different types of hands on the clock",
                "enum": [
                  "dateTime",
                  "text",
                  "icon",
                  "dataLabel",
                  "image",
                  "hand",
                  "dataBar",
                  "dataRing"
                ]
              },
              "dataSource": {
                "type": "string",
                "description": "used in combination with a layer type to set the format",
                "enum": [
                  "Steps",
                  "StepCount",
                  "HeartRate",
                  "EnergyBurned",
                  "EnergyBurnedGoal",
                  "ExerciseTime",
                  "ExerciseTimeGoal",
                  "StandTime",
                  "StandTimeGoal",
                  "DistanceWalkRun",
                  "DistanceWalkRunUnit",
                  "FlightsClimbed",
                  "Temperature",
                  "TempertureMin",
                  "TempertureMax",
                  "Sunrise",
                  "Sunset",
                  "FeelsLike",
                  "ChanceOfPrecip",
                  "RainAmount",
                  "WeatherDescription",
                  "WeatherDescriptionCaps",
                  "WeatherIcon",
                  "WeatherDailyDayTemp",
                  "WeatherDailyNightTemp",
                  "WeatherDailyEveTemp",
                  "WeatherDailyMornTemp",
                  "Battery",
                  "BatteryNum",
                  "BatteryLevel"
                ]
              },
              "filename": {
                "type": "string"
              },
              "textOptions": {
                "type": "object",
                "properties": {
                  "dateTimeFormatDescription": {
                    "type": "string"
                  },
                "fontFamily": {
                    "type": "string",
                    "description": "the family name of the font to use for built-in fonts in clockology and most other ocs render clients",
                    "enum" : [
                      "HelveticaNeue-Bold",
                      "RationalInteger",
                      "BlackRose",
                      "ConeriaScriptDemo",
                      "PlainGermanica",
                      "RothenburgDecorative",
                      "KingthingsFoundation",
                      "TrajanPro-Regular",
                      "DINPro-Light",
                      "UltraCondensedSerif",
                      "IronLounge2",
                      "Digital-7Mono",
                      "Digital-7MonoItalic",
                      "NixieOne",
                      "Lcdphone",
                      "Joystix",
                      "PixelMillennium",
                      "Cape_Corn",
                      "Bauhaus93",
                      "FuturaCondXBooldOblique",
                      "BenguiatBold",
                      "SF Mono",
                      "SFCompactDisplay-Regular",
                      "Impact",
                      "LIBRARY3AM",
                      "Trench-Thin",
                      "FontaniaRegular",
                      "28-SegmentLEDDisplay",
                      "AunchantedXspaceThin",
                      "BitstreamVeraSansMono-Roman",
                      "Street-Soul",
                      "Chinese-Brush",
                      "Code-Squared",
                      "Jeepers",
                      "KoolBeans",
                      "QuatreQuarts",
                      "Spacearella",
                      "Grinched",
                      "AshcanBB",
                      "Ballsontherampage",
                      "Unnamed-Regular",
                      "ManaspaceReg",
                      "TwoFiftySixBytes-Regular",
                      "NewsflashBB",
                      "AzonixRegular",
                      "CaviarDreams",
                      "OPTICopperplate",
                      "Roboto-Regular",
                      "SteelfishRg-Regular",
                      "BebasKai"
                    ]
                  },
                "fontFilename": {
                    "type": "string"
                  },

                  "fontFilename": {
                    "type": "string"
                  },

                  "customText": {
                    "type": "string"
                  },

                  "effectType": {
                    "type": "string"
                  },

                  "outlineWidth": {
                    "type": "number"
                  },

                  "outlineColor": {
                    "type": "string"
                  },

                  "kerning": {
                    "type": "number"
                  },

                  "justification": {
                    "type": "string",
                    "enum": [
                      "left",
                      "right",
                      "centered"
                    ]
                  },
                  "casingType": {
                    "type": "string",
                    "enum": [
                      "none", "lower", "sentence", "uppercased", "word"
                    ]
                  },
                  "dateTimeFormat": {
                    "description": "The format of a text label when the layer type is .dateTime.  Layer type of .text is jut for setting custom text",
                    "type": "string",
                    "enum": [
                      "HHMMSS",
                      "HHMM",
                      "HHMMPM",
                      "HH",
                      "MM",
                      "SS",
                      "PM",
                      "DADD",
                      "DDMM",
                      "MMDD",
                      "MO",
                      "ML",
                      "MN",
                      "DA",
                      "DD",
                      "DDAuto",
                      "DL",
                      "DY",
                      "DW",
                      "WY",
                      "YY",
                      "YYYY",
                      "Colon",
                      "Slash",
                      "City",
                      "Country",
                      "HourWord",
                      "MinuteWord",
                      "SecondsWord",
                      "HourWordUnit",
                      "MinuteWordUnit",
                      "SecondsWordUnit"
                    ]
                  }
                }
              },
              "handOptions": {
                "type": "object",
                "properties": {

                  "useImage": {
                    "type": "boolean"
                  },

                  "handType": {
                    "type": "string",
                    "enum": [
                      "second",
                      "minute", 
                      "hour"
                    ]
                  },

                  "handStyle": {
                    "type": "string",
                    "description": "the style of the vector hand. Ignored if useImage = true",
                    "enum": [
                      "rounded",
                      "classicOutline", 
                      "classic",
                      "swiss",
                      "swissCircle", 
                      "flatDial", 
                      "thinDial", 
                      "blocky", 
                      "arrow", 
                      "roman", 
                      "pie", 
                      "pieInverted"
                    ]
                  }
                }
              },
              "dataLabelOptions": {
                "type": "object",
                "properties": {
                  "unitDisplayLevel": {
                    "type": "string",
                    "enum": [
                      "short",
                      "medium",
                      "long"
                    ]
                  }
                }
              },
              "iconOptions": {
                "type": "object"
              },
              "weatherOptions": {
                "type": "object",
                "properties": {
                  "timeSpan": {
                    "type": "string",
                    "enum": [
                      "current"
                    ]
                  }
                }
              },
              "dataRingOptions": {
                "type": "object",
                "properties": {
                  "format": {
                    "type": "string",
                    "enum": [
                      "energyBurned",
                      "exerciseTime", 
                      "standTime", 
                      "batteryLevel"
                    ]
                  }
                }
              },
              "dataBarOptions": {
                "type": "object"
              }
            }
          }
        }
      }
    }
  }
}
